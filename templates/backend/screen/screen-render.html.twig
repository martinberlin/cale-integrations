{% extends 'backend/backend-base.html.twig' %}

{% block stylesheets %}
    <link href="/css/weather-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="row" id="screen-preview-url">
        <form>
            <div class="col-md-6">

                <label for="route_html">ESP32 Html public route:</label>
                <input type="text" value="{{ html_url }}" id="route_html" class="form-control">
            </div>
            <div class="col-md-6">

                <button type="button" class="btn btn-default" onclick="window.location='{{ html_url }}'" id="route_html"
                        style="margin-top:1.8em">Preview
                </button>
            </div>
            <div class="col-md-6" style="color:white">
                <br><b>NOTE:</b> Soon it will be possible to add an Authentication Bearer token per screen.
            </div>
            <div class="col-md-6" style="color:white">
                <br>Please do not share the link if you care for your privacy.
            </div>
        </form>
    </div>
    {% include template %}

{% endblock %}