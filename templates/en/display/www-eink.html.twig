{% extends '/base.html.twig' %}
{% set carousel_high = 110 %}

{% block stylesheets %}
    <style>
        #myCarousel.carousel {
            height: {{ carousel_high }}px;
        }
        #myCarousel .item {
            height: {{ carousel_high }}px; width: 100%;
            background-color: #333;
        }
    </style>
{% endblock stylesheets %}

{% block carousel %}
    {% include "/partials/carousel.html.twig" %}
{% endblock carousel %}

{% block body %}
    <h3>E-ink displays supported</h3>

    <table style="border-spacing:4px;width: 99%">
        <thead>
        </tr>
        <th></th>
        <th>gxEPD Name</th>
        <th>Resolution</th>
        <th>URLs</th>
        </tr>
        </thead>
        <tbody>
        {% for d in displays %}
            {% set h = 200 %}
        {% if d.classname == 'GDEW029T5' or d.classname == 'GDEH029A1' %}
            {% set h = 150 %}
        {% endif %}
            <tr style="border:1px #1b6d85 dashed">
                <td>
                <img style="height:{{ h }}px;margin-top: 1px" src="/assets/display/{{ d.className }}.jpg"><br>
                    &nbsp;<small>{{ d.brand }}</small>
                </td>
                <td>{{ d.name }}<br>Refresh: {{ d.timeOfRefresh }} sec.</td>
                <td>{{ d.width }}x{{ d.height }}</td>

                <td><a href="{{ d.manualUrl }}" target="_blank">webpage</a>&nbsp;
                    <br>
                    <button class="btn btn-primary" onclick="window.location='{{ d.purchaseUrl }}'">Buy</button>
                </td>
            </tr>
        {% endfor %}
        <tr style="border:1px #1b6d85 dashed">
            <td>
                <img style="height:200px" src="/assets/display/T5S.jpg"><br>
                &nbsp;<small>TTGO</small> &nbsp;&nbsp;Epaper connected with the ESP32 and a deepsleep consumption of 0.17 mA/hour.
                <br>&nbsp;<b>Highly recommended to start using <span class="cale" style="font-weight:bolder">CALE</span></b>
            </td>
            <td>2.7"
            </td>
            <td>264x176</td>

            <td><a href="http://www.lilygo.cn/prod_view.aspx?TypeId=50031&Id=1088&FId=t3:50031:3" target="_blank">webpage</a>&nbsp;
                <br>
                <button class="btn btn-primary" onclick="window.location='https://www.digitspace.com/lilygo-ttgo-t5s-v2-8-esp32-2-7-inch-black-epaper-plus-module-for-alexa-i2s-dac-max98357a-mems-microphone-ics43434?9c12f43bc77de9e6'">Buy</button>
            </td>
        </tr>


        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="/js/engine/common.js"></script>
{% endblock %}