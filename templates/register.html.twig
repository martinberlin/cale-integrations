{% extends 'base.html.twig' %}

{% block carousel %}
    {% include "partials/carousel.html.twig" %}
{% endblock %}
{% block body %}
    <div class="row" style="margin-top: 40px">
        {{ form_start(form) }}
        <div class="col-md-4" style="margin-top: 1.3em"><h4>This E-mail is just to recover your password.</h4>
            We will not sent any unsolicited E-mail. Our customers privacy is our most highest concern. </div>
        <div class="col-md-4">
            <h3>Register an account</h3>
            <p>To be notified about the Eink display manager launch</p>
            {{ form_errors(form) }}
            {{ form_row(form.firstname) }}

            {{ form_label(form.language) }}
            <p>We will set this as default for API communication so you get the data in your language</p>
            {{ form_widget(form.language) }}

            <br><br><p>This is what is used for login</p>
            {{ form_row(form.email) }}

            {{ form_label(form.plainPassword.first, 'Password') }}
            {{ form_widget(form.plainPassword.first,{'attr': { 'class': 'form-control' }}) }}
            {{ form_label(form.plainPassword.second, 'Repeat password') }}
            {{ form_widget(form.plainPassword.second,{'attr': { 'class': 'form-control' }}) }}
            <br>
            {{ form_widget(form.submit) }}
            <div style="height: 40px"></div>
        </div>
        <div class="col-md-4"></div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="./js/engine/common.js"></script>
{% endblock %}